    "from collections import Counter\n",
    "\n",
    "def merge_and_sum_dicts(*dicts):\n",
    "    return dict(sum((Counter(d) for d in dicts), Counter()))\n",
    "\n",
    "print(merge_and_sum_dicts({'a': 1, 'b': 2, 'c': 4}, {'b': 3, 'c': 4})) "
